{
  "name": "polyforge-cli",
  "version": "0.1.0",
  "description": "PolyForge hybrid full-stack scaffold CLI for go-gin and springboot",
  "main": "dist/index.js",
  "bin": {
    "scaffold": "dist/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && rm -rf dist/templates && cp -R src/templates dist/templates",
    "dev": "tsx src/index.ts",
    "test": "vitest run --config vitest.config.ts",
    "test:watch": "vitest",
    "lint": "tsc -p tsconfig.json --noEmit",
    "smoke:e2e": "node scripts/smoke-e2e.mjs"
  },
  "keywords": [
    "scaffold",
    "cli",
    "go",
    "springboot"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "commander": "^14.0.1",
    "fs-extra": "^11.3.2",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.3.0",
    "@types/prompts": "^2.4.9",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
